//Remover um contato a partir de um indentificador (ID)
#include<stdio.h>

void apagar(int idA);

int main(){
int r;
    printf("Informe o id do contato que deseja remover: ");
    scanf("%i",&r);
    apagar(r);
}

void apagar(int idA){
    FILE *f1 = fopen("agenda_aux.dat", "w");
    FILE *f2 = fopen("agenda.dat", "r");

    int id;
    char nome[80];
    char profissao[80];
    char telefone[80];

    if(!f2){
        printf("Impossivel abrir o arquivo\n");
    }

    while(!feof(f2)){
        fscanf(f2, "%d %s %s %s",&id, nome, profissao, telefone);
        printf("(%d) (%s) (%s)\n",id, nome, telefone);
        if(id != idA){
            fprintf(f1,"%d %s %s %s\n",id, nome, profissao,
            telefone);
        }    
    }
}
